<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <LinearLayout
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>
    <ImageView
        android:background="#ff9899"
        android:layout_gravity="center"
        android:layout_width="410dp"
        android:layout_height="40dp">

    </ImageView>
    <LinearLayout
        android:background="@drawable/w6"
        android:layout_marginTop="15dp"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_gravity="center">
        <TextView
            android:shadowColor="@color/white"
            android:layout_marginEnd="20dp"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:text="Try New\n Unique Recipes"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold">

        </TextView>


        <ImageView
            android:layout_width="188dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:background="@drawable/logo1">

        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/browndark"
        android:layout_marginTop="15dp"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/appetizer">
        </ImageView>

        <Button
            android:textColor="#000000"
            android:background="@drawable/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/button1"
            android:text="Open"
            android:textAllCaps="false"
            android:layout_width="70dp"
            android:layout_height="40dp">
        </Button>

        <LinearLayout

            android:layout_width="109dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Appetizer"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/orange"
        android:layout_marginTop="15dp"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:background="@drawable/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/button2"
            android:text="Open"
            android:textAllCaps="false"
            android:layout_width="70dp"
            android:layout_height="40dp">
        </Button>
        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Soup"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/soup">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/pink"
        android:layout_marginTop="15dp"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/dessert">
        </ImageView>

        <Button
            android:background="@drawable/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/button3"
            android:text="Open"
            android:textAllCaps="false"
            android:layout_width="70dp"
            android:layout_height="40dp">
        </Button>

        <LinearLayout
            android:layout_width="109dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Dessert"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/green1"
        android:layout_marginTop="15dp"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:background="@drawable/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/button4"
            android:text="Open"
            android:textAllCaps="false"
            android:layout_width="70dp"
            android:layout_height="40dp">
        </Button>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="96dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Main Course"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/maincourse">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/maroon"
        android:layout_marginTop="15dp"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/w4">
        </ImageView>

        <Button
            android:background="@drawable/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/button5"
            android:text="Open"
            android:textAllCaps="false"
            android:layout_width="70dp"
            android:layout_height="40dp">
        </Button>

        <LinearLayout
            android:layout_width="109dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Specialty"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#b8d5cd"
        android:layout_marginTop="15dp"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="109dp"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/black"
        android:layout_gravity="center"
        android:layout_width="410dp"
        android:layout_height="50dp">
        <TextView
            android:layout_marginStart="45dp"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="WELCOME AND ENJOY!!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
    <ImageView
        android:background="#ff9899"
        android:layout_gravity="center"
        android:layout_width="410dp"
        android:layout_height="40dp">

    </ImageView>
</LinearLayout>