<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Activity2">

  <LinearLayout
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:layout_gravity="center"
      android:layout_width="210dp"
      android:layout_height="50dp">


    <TextView
        android:paddingStart="10dp"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:background="@drawable/brown"
        android:layout_gravity="center"
        android:text="Carrots In A Blanket"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold">

    </TextView>
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dp"
      android:layout_gravity="center"
      android:layout_width="190dp"
      android:layout_height="90dp">
    <ImageView
        android:layout_gravity="center"
        android:background="@drawable/app3"
        android:layout_width="190dp"
        android:layout_height="90dp">

    </ImageView>
  </LinearLayout>
  <LinearLayout
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:layout_gravity="left"
      android:layout_width="170dp"
      android:layout_height="35dp">


    <TextView
        android:paddingStart="10dp"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:background="@drawable/brown"
        android:layout_gravity="center"
        android:text="Ingredients"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold">

    </TextView>
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dp"
      android:layout_gravity="left"
      android:layout_width="370dp"
      android:layout_height="190dp">


    <TextView
        android:background="@color/black"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_width="370dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:text="1/4 c. extra-virgin olive oil\n
1/4 c. soy sauce\n
2 tsp. maple syrup\n
1/2 tsp. smoked paprika\n
1/2 tsp. Liquid Smoke\n
Freshly ground black pepper
1 lb. baby carrots\n
1 tube refrigerated crescent rolls
Egg wash\n
2 tsp. poppy seeds
Grainy mustard, for serving.

">

    </TextView>

  </LinearLayout>
  <LinearLayout
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:layout_gravity="left"
      android:layout_width="170dp"
      android:layout_height="30dp">


    <TextView
        android:paddingStart="10dp"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:background="@drawable/brown"
        android:layout_gravity="center"
        android:text="Process"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold">

    </TextView>
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dp"
      android:layout_gravity="left"
      android:layout_width="360dp"
      android:layout_height="260dp">


    <TextView
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:text="1.	Preheat oven to 375Â° and line a small baking sheet with parchment paper. In a medium bowl, whisk together oil, soy sauce, maple syrup, paprika, liquid smoke, and a few cranks of black pepper. Place baby carrots in a Ziploc bag, then cover with the marinade. Marinate 30 minutes in the refrigerator.\n
2.	Drain carrots and pat them dry with paper towels. Place carrots on prepared baking sheet and bake for 15 minutes. \n
3.	Line another small baking sheet with parchment paper. Slice crescent rolls lengthwise into thirds.Brush with egg wash and garnish each with poppy seeds. Bake until crescents are golden, 15 to 20 minutes.
"
        android:textColor="#ffffff"
        android:textSize="13sp">

    </TextView>

  </LinearLayout>
</LinearLayout>