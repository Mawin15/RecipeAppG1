<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".Activity2">

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="40dp">


        <TextView
            android:paddingStart="10dp"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/maroon"
            android:layout_gravity="center"
            android:text="Chicken Sotanghon Soup"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="190dp"
        android:layout_height="90dp">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/inamo5"
            android:layout_width="190dp"
            android:layout_height="90dp">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="left"
        android:layout_width="170dp"
        android:layout_height="27dp">


        <TextView
            android:paddingStart="10dp"
            android:layout_width="170dp"
            android:layout_height="27dp"
            android:background="@drawable/maroon"
            android:layout_gravity="center"
            android:text="Ingredients"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="left"
        android:layout_width="370dp"
        android:layout_height="235dp">


        <TextView
            android:background="@color/black"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:layout_width="370dp"
            android:layout_height="235dp"
            android:layout_gravity="center"
            android:text="1 1/2 lbs. chicken breast\n
	1 piece Knorr Chicken Cube\n
	2 1/2 ounces sotanghon noodles\n
	1 piece dried bay leaves, 7 cups water\n
	1 1/2 cups cabbage shredded\n
	1 piece carrot julienne, 1 piece onion chopped\n
	1/2 cup scallions chopped, 3 tablespoons cooking oil\n
	2 stalks celery chopped, 5 cloves garlic minced\n
	2 tablespoons garlic roasted, 3/4 cups annatto water\n
	Fish sauce and ground black pepper to taste">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="left"
        android:layout_width="170dp"
        android:layout_height="27dp">


        <TextView
            android:paddingStart="10dp"
            android:layout_width="170dp"
            android:layout_height="27dp"
            android:background="@drawable/maroon"
            android:layout_gravity="center"
            android:text="Process"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="left"
        android:layout_width="357dp"
        android:layout_height="280dp">


        <TextView
            android:layout_width="357dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:text="1.Put the chicken breast in the pot. Cover and boil in medium heat for 20 minutes. Remove chicken from the pot and put in a clean plate. Let it cool down. Save the chicken stock. Shred the chicken and set aside. \n
2.	Heat oil in a large pot. Saute garlic until light brown. Add onion and celery. Put the shredded chicken in the pot and then saute for 2 minutes\n
3.	Pour chicken stock and let boil, Add Knorr Chicken Cube. Stir, Put carrots and cabbage into the pot. Cook for 5 minutes.\n
4.	Add annatto water and sotanghon noodles. Cover and cook for 10 minutes.Season with fish sauce and ground black pepper\n
5.	Put some roasted garlic and chopped scallions. Stir, transfer to a serving bowl. Serve."
            android:textColor="#ffffff"
            android:textSize="12sp">

        </TextView>

    </LinearLayout>
</LinearLayout>