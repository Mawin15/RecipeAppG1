<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Activity2">

  <LinearLayout
      android:layout_marginTop="10dp"
      android:paddingBottom="10dp"
      android:background="@drawable/black"
      android:layout_gravity="center"
      android:layout_width="350dp"
      android:layout_height="50dp">

    <TextView
        android:layout_gravity="center"
        android:layout_marginStart="115dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SOUP'S"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>
  </LinearLayout>

  <LinearLayout
      android:paddingTop="5dp"
      android:layout_width="359dp"
      android:layout_height="90dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="17dp"
      android:background="@drawable/soup1"
      android:paddingBottom="5dp">

    <Button
        android:id="@+id/soup1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/black"
        android:text="Recipe"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <TextView

        android:layout_width="190dp"
        android:layout_height="70dp"
        android:background="@drawable/orange1"
        android:gravity="center"
        android:text="Potato Beer Cheese Soup"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold">

    </TextView>
  </LinearLayout>
  <LinearLayout

      android:layout_marginStart="10dp"
      android:layout_width="370dp"
      android:layout_height="90dp"
      android:layout_marginTop="17dp"
      android:background="@drawable/soup2"
      android:paddingBottom="7dp">

    <Button
        android:textColor="@color/white"
        android:id="@+id/soup2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/black"
        android:text="Recipe"
        android:textAllCaps="false"
        android:textSize="25sp">
    </Button>

    <TextView
        android:layout_marginTop="7dp"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:background="@drawable/orange1"
        android:gravity="center"
        android:text="Pesto Chicken Minestrone"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold">

    </TextView>
  </LinearLayout>
  <LinearLayout
      android:layout_marginStart="10dp"
      android:layout_width="370dp"
      android:layout_height="90dp"
      android:layout_marginTop="17dp"
      android:background="@drawable/soup3"
      android:paddingBottom="5dp">

    <Button
        android:textColor="@color/white"
        android:id="@+id/soup3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/black"
        android:text="Recipe"
        android:textAllCaps="false"
        android:textSize="25sp">

    </Button>

    <TextView
        android:layout_marginTop="7dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/orange1"
        android:gravity="center"
        android:text="Spiced Sweet Potato and Peanut Puree"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold">

    </TextView>
  </LinearLayout>
  <LinearLayout
      android:layout_marginStart="10dp"
      android:layout_width="370dp"
      android:layout_height="75dp"
      android:layout_marginTop="17dp"
      android:background="@drawable/soup4"
      android:paddingBottom="5dp">

    <Button
        android:textColor="@color/white"
        android:id="@+id/soup4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/black"
        android:text="Recipe"
        android:textAllCaps="false"
        android:textSize="25sp">

    </Button>

    <TextView

        android:layout_width="190dp"
        android:layout_height="60dp"
        android:background="@drawable/orange1"
        android:gravity="center"
        android:text="Wonton Soup"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold">

    </TextView>
  </LinearLayout>
  <LinearLayout
      android:layout_marginStart="10dp"
      android:layout_width="370dp"
      android:layout_height="90dp"
      android:layout_marginTop="17dp"
      android:background="@drawable/soup5"
      android:paddingBottom="5dp">

    <Button
        android:textColor="@color/white"
        android:id="@+id/soup5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/black"
        android:text="Recipe"
        android:textAllCaps="false"
        android:textSize="25sp">

    </Button>

    <TextView
        android:layout_marginTop="7dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/orange1"
        android:gravity="center"
        android:text="Spiced Tomato Soup with FlatBread"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold">

    </TextView>
  </LinearLayout>
  <LinearLayout
      android:paddingTop="5dp"
      android:layout_marginStart="10dp"
      android:layout_width="370dp"
      android:layout_height="90dp"
      android:layout_marginTop="17dp"
      android:background="@drawable/soup6"
      android:paddingBottom="5dp">

    <Button
        android:textColor="@color/white"
        android:id="@+id/soup6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/black"
        android:text="Recipe"
        android:textAllCaps="false"
        android:textSize="25sp">

    </Button>

    <TextView

        android:layout_width="190dp"
        android:layout_height="70dp"
        android:background="@drawable/orange1"
        android:gravity="center"
        android:text="Ultimate Chicken Noodle Soup"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold">

    </TextView>
  </LinearLayout>

  <ImageView
      android:layout_width="360dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/orange">

  </ImageView>
</LinearLayout>